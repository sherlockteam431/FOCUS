<% provide(:title, @user.firstName) %>

      <!-- HEADER /-->
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <h1>
      <!-- add button for add picture /-->
          <%= gravatar_for @user %>
          <%= @user.firstName %> <%= @user.lastName %>
    </h1>
 </section>
  </aside>
</div>

      <!-- EVENt TABLE /-->
  <style>
    .event-table td{
      vertical-align:middle;
    }
  </style>
  <h1> Events</h1>
  <table class="event-table">
      <th>Attended</th>
      <th>Name</th>
      <th>Points</th>
      <th>Date</th>
      <th>Type</th>
      <% @events.each do |e| %>
          <tr align="right">
            <% if attended_event?(e.name) then %>
              <td><%= image_tag "/assets/checkmark.jpg"%></td>
            <% else %>
              <td><%= image_tag "/assets/xmark.jpg"%></td>
            <% end %>
            <td><%= e.name %></td>
            <td><%= e.points %></td>
            <td><%= e.date %></td>
            <td><%= e.eventType %></td>
          </tr>
      <% end %>
  </table>